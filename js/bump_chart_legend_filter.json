{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#FAF8F5",
  "width": 900,
  "height": 450,
  "data": {
    "url": "https://raw.githubusercontent.com/Helenaaaxx/FIT3179_VisProject2/main/Dataset/bump_chart_dataset.csv"
  },
  "params": [
    {
      "name": "legend_filter",
      "select": {"type": "point", "fields": ["State"]},
      "bind": "legend"
    }
  ],
  "mark": {"type": "line", "point": {"size": 400}, "size": 5},
  "encoding": {
    "x": {
      "field": "Year", 
      "type": "ordinal", 
      "axis": {
        "titleFontSize": 18,
        "labelFontSize": 14
      }
    },
    "y": {
      "field": "Rank", 
      "type": "ordinal",
      "axis": {
        "titleFontSize": 18,
        "labelFontSize": 14
      }
    },
    "color": {
      "field": "State",
      "scale": {
        "domain": [
          "New South Wales",
          "Victoria",
          "Queensland",
          "South Australia",
          "Western Australia",
          "Tasmania",
          "Northern Territory",
          "Australian Capital Territory"
        ],
        "range": [
          "#F2C381",
          "#EFC7D3",
          "#B86986",
          "#7A7270",
          "#97B9B6",
          "#E79CB5",
          "#7E74A4",
          "#B1968A"
        ]
      },
      "legend": {"title": "States Selection:", "titleAlign": "left", "titleFontSize": 18, "labelFontSize": 14}
    },
    "opacity": {
      "condition": {"param": "legend_filter", "value": 1},
      "value": 0.2
    },
    "tooltip": [
      {"field": "Year", "type": "ordinal", "title": "Year"},
      {"field": "State", "type": "nominal", "title": "Country"},
      {
        "field": "Standardised Death Rate per thousand",
        "type": "quantitative",
        "title": "Standardised Death Rate (per thousand)",
        "format": ".2f"
      },
      {"field": "Rank", "type": "quantitative", "title": "Rank"}
    ]
  },
  "config": {}
}